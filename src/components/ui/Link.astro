---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {
  href: string;
  variant?: "primary" | "secondary" | "badge";
}

const { href, variant = "primary", ...rest } = Astro.props;
---

<a href={href} class:list={["btn", variant]} {...rest}>
  <slot />
</a>
